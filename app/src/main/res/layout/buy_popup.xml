<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:paddingLeft="@dimen/recycler_horizontal_margin"
    android:paddingTop="@dimen/graph_vertical_margin"
    android:paddingRight="@dimen/recycler_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/companyNameBuyTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_columnWeight="20"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="@dimen/graph_vertical_margin"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:textColor="@color/colorDarkText"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/companyWorthBuyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/graph_vertical_margin"
        android:gravity="right"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <NumberPicker
        android:id="@+id/buyCountPicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_columnSpan="2"
        android:layout_columnWeight="1" />

    <Button
        android:id="@+id/buyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_columnWeight="1"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/graph_vertical_margin"
        android:background="@android:color/transparent"
        android:textColor="@color/colorPrimary"
        android:topLeftRadius="10dp"
        android:topRightRadius="10dp" />
</GridLayout>